{
  "name": "mjml-api",
  "version": "1.0.0",
  "description": "MJML API Conversion",
  "repository": "https://github.com/ViBiOh/mjml-api",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write src/*.js",
    "lint": "eslint --fix src/",
    "prebuild": "npm run format && npm run lint",
    "build": "babel src --out-dir dist",
    "start": "babel-node src/index.js --rollbarToken ${ROLLBAR_TOKEN} --rollbarEnv dev"
  },
  "keywords": [
    "mjml",
    "api",
    "conversion"
  ],
  "author": "ViBiOh",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.18.3",
    "express": "4.16.4",
    "express-opentracing": "0.1.1",
    "jaeger-client": "3.13.0",
    "mjml": "4.2.1",
    "prom-client": "11.2.0",
    "rollbar": "2.5.0",
    "yargs": "12.0.5"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "prettier": "1.15.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
